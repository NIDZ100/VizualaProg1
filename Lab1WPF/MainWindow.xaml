        <Label x:Name="lblStudentList" Content="Studentu saraksts:" HorizontalAlignment="Left" Margin="82,410,0,0" VerticalAlignment="Top" Height="68" Width="234" FontSize="25"/>
        <Border BorderBrush="Black" BorderThickness="1" Margin="1055,277,-455,1523">
